@page "/product-details/{slug}"
@model SneakerShop.CustomerUI.Pages.Product.ProductDetail
@{
    ViewData["Title"] = "ProductDetail";
}

<div class="container-fluid p-0">
    <h4>@Model.Product.Name</h4>
    <hr>
    <div class="container">
        <div class="row">
            <div class="col-12 col-md-6">
                <img src="@(string.IsNullOrEmpty(Model.Product.ImageUrl) ? "https://picsum.photos/300/300" : Model.Product.ImageUrl)"
                    alt="@Model.Product.Name" class="img-fluid">
            </div>
            <div class="col-12 col-md-6">
                <h2>@Model.Product.Name</h2>
                <p class="lead">@Model.Product.Description</p>
                <h3 class="text-primary">$@Model.Product.Price.ToString("0.00")</h3>

                <div class="d-flex flex-row mt-4 gap-3">
                    <div class="form-group">
                        <label for="size">Size</label>
                        <select id="size" class="form-control">
                            <option>Select Size</option>
                            <option>S</option>
                            <option>M</option>
                            <option>L</option>
                            <option>XL</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="quantity">Quantity</label>
                        <input type="number" id="quantity" class="form-control" min="1" value="1">
                    </div>
                </div>

                <button class="btn btn-primary btn-lg mt-3">Add to Cart</button>
            </div>
        </div>
    </div>
</div>