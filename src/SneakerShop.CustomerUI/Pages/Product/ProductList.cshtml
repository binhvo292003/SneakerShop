@page "/product-list"
@using SneakerShop.CustomerUI.Models
@model SneakerShop.CustomerUI.Pages.Product.ProductList
@{
    ViewData["Title"] = "ProductList";
}

<div class="container">
    <div class="row">
        <div class="col-12 col-md-3">
            <div>
                <h4>Filter by</h4>
                <form action="" class="form-filter">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                    <label class="form-check-label" for="flexCheckDefault">
                        Default checkbox
                    </label>
                </form>
            </div>
            <div class="d-flex flex-column">
                <h4>Category</h4>
                <form class="d-flex flex-column" action="">
                    <div>
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault1">
                        <label class="form-check-label" for="flexCheckDefault1">
                            Default checkbox
                        </label>
                    </div>
                    <div>
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault2">
                        <label class="form-check-label" for="flexCheckDefault2">
                            Default checkbox
                        </label>
                    </div>
                    <div>
                        <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault3">
                        <label class="form-check-label" for="flexCheckDefault3">
                            Default checkbox
                        </label>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-12 col-md-9">
            <div class="container-fluid p-0">
                <div class="fw-bold fs-4 mb-2">New Arrival</div>
                <img src="https://picsum.photos/id/1018/800/300" class="img-fluid w-100" alt="Women's collection">
            </div>
            <hr />
            <div class="container-fluid p-0">
                <div class="row row-cols-1 row-cols-md-3">
                    @foreach (var product in Model.Products)
                    {
                        <div class="col mb-4">
                            <div class="card h-100">
                                <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                                <div class="card-body">
                                    <h5 class="card-title">@product.Name</h5>
                                    <p class="card-text text-truncate">@product.Description</p>
                                    <p class="fw-bold">$@product.Price.ToString("0.00")</p>
                                    <a href="/product-details/@product.Slug" class="btn btn-primary">View Details</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>