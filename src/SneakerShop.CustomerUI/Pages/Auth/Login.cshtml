@page "/login"
@model SneakerShop.CustomerUI.Pages.Auth.Login
@{
    ViewData["Title"] = "Login";
}

<div class="container my-4">

    <h1>Log In</h1>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <p class="m-0">@error.ErrorMessage</p>
            }
        </div>
    }

    <form method="post">
        <div class="form-group">
            <label asp-for="Input.Email" class="form-label"></label>
            <input asp-for="Input.Email" class="form-control" placeholder="Enter email" />
            <span asp-validation-for="Input.Email"></span>
        </div>
        <div class="form-group">
            <label asp-for="Input.Password" class="form-label"></label>
            <input asp-for="Input.Password" class="form-control" placeholder="Password" type="password" />
            <span asp-validation-for="Input.Password"></span>
        </div>
        <div>
            Do not have account?
            <span>
                <a href="/register">Register</a>
            </span>
        </div>
        <button type="submit" class="btn btn-primary my-3">Submit</button>
    </form>

</div>