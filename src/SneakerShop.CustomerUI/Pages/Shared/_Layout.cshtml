<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SneakerShop.CustomerUI</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SneakerShop.CustomerUI.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/_Layout.css" asp-append-version="true" />

</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid d-flex justify-content-around align-items-center">
                <a class="navbar-brand" asp-page="/Home/Index">
                    <img src="~/images/logo.png" alt="Logo" width="40" height="40">
                    <span class="fw-bold fs-4">SneakerShop</span>
                </a>

                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link" asp-page="/Product/ProductList">
                            Latest
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link" asp-page="/Product/ProductList">
                            Men
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="menDropdown">
                            <li class="dropdown-submenu">
                                <a class="dropdown-item dropdown-toggle" href="#">Clothing</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#">Shirts</a></li>
                                    <li><a class="dropdown-item" href="#">Pants</a></li>
                                    <li><a class="dropdown-item" href="#">Jackets</a></li>
                                </ul>
                            </li>
                            <li class="dropdown-submenu">
                                <a class="dropdown-item dropdown-toggle" href="#">Accessories</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#">Watches</a></li>
                                    <li><a class="dropdown-item" href="#">Belts</a></li>
                                </ul>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="#">Sale</a></li>
                        </ul>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link" asp-page="/Product/ProductList">
                            Women
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="menDropdown">
                            <li class="dropdown-submenu">
                                <a class="dropdown-item dropdown-toggle" href="#">Clothing</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#">Shirts</a></li>
                                    <li><a class="dropdown-item" href="#">Pants</a></li>
                                    <li><a class="dropdown-item" href="#">Jackets</a></li>
                                </ul>
                            </li>
                            <li class="dropdown-submenu">
                                <a class="dropdown-item dropdown-toggle" href="#">Accessories</a>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#">Watches</a></li>
                                    <li><a class="dropdown-item" href="#">Belts</a></li>
                                </ul>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="#">Sale</a></li>
                        </ul>
                    </li>
                </ul>


                <form class="d-flex" role="search" method="get" asp-page="/Search/Index">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search"
                        name="query">
                </form>
            </div>
        </nav>

    </header>
    <div class="container-fluid p-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - SneakerShop.CustomerUI - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>